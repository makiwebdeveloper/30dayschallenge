generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  username     String @unique
  passwordHash String @map("password_hash")
  salt         String

  name     String
  imageUrl String @map("image_url")

  friends         User[] @relation("friends")
  friendsRelation User[] @relation("friends")

  fromFriendshipRequests FriendshipRequests[] @relation("from")
  toFriendshipRequests   FriendshipRequests[] @relation("to")
}

model FriendshipRequests {
  fromUser   User   @relation("from", fields: [fromUserId], references: [id])
  fromUserId String @map("from_user_id")

  toUser   User   @relation("to", fields: [toUserId], references: [id])
  toUserId String @map("to_user_id")

  @@id([fromUserId, toUserId])
}
