generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  username     String @unique
  passwordHash String @map("password_hash")
  salt         String

  name     String
  imageUrl String @map("image_url")

  friends         User[] @relation("friends")
  friendsRelation User[] @relation("friends")

  challenges        MemberChallenge[]
  createdChallenges Challenge[]

  fromFriendshipRequests FriendshipRequests[] @relation("from")
  toFriendshipRequests   FriendshipRequests[] @relation("to")
}

model FriendshipRequests {
  fromUser   User   @relation("from", fields: [fromUserId], references: [id])
  fromUserId String @map("from_user_id")

  toUser   User   @relation("to", fields: [toUserId], references: [id])
  toUserId String @map("to_user_id")

  @@id([fromUserId, toUserId])
}

model Challenge {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title       String
  description String?

  creator   User   @relation(fields: [creatorId], references: [id])
  creatorId String @map("creator_id")

  members MemberChallenge[]
}

model MemberChallenge {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  challenge   Challenge @relation(fields: [challengeId], references: [id])
  challengeId String    @map("challenge_id")

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  days Day[]
}

model Day {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  number     Int
  feelings   String?
  difficulty Difficulty?
  completed  Boolean     @default(false)

  memberChallenge   MemberChallenge @relation(fields: [memberChallengeId], references: [id])
  memberChallengeId String          @map("member_challenge")
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}
